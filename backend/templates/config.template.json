{
  "_meta": {
    "file": "/backend/templates/config.template.json",
    "project": "Speakify",
    "version": "1.0.0",
    "generated": "Do not use in production until filled",
    "note": "Set 'template' to false once configured"
  },
  "template": true,
  "env": "development",
  "debug": true,
  "base_url": "/speakify/public",
  "db": {
    "host": "127.0.0.1",
    "name": "speakify",
    "user": "root",
    "pass": ""
  },
  "api_keys": {
    "admin": "change_this_token",
    "frontend": "change_this_frontend_key"
  },
  "session": {
    "expiry_days": 7
  },
  "api": {
    "rate_limit": false,
    "default_lang_id": 39
  },
  "frontend": {
    "allow_origins": ["*"],
    "allow_methods": ["GET", "POST", "OPTIONS"],
    "allow_headers": ["Content-Type", "Authorization"]
  },
  "google": 
  {
    "tts_key_file": "backend/secrets/google-tts.json",
    "translate_key_file": "backend/secrets/google-translate.json"
  }
}
